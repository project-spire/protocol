{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "category": { "type": "string" },
        "offset": { "type": "integer" },
        "protocols": {
            "type": "array",
            "items": { "$ref": "#/$defs/protocol" }
        }
    },
    "required": ["category", "offset", "protocols"],
    "$defs": {
        "protocol": {
            "type": "object",
            "properties": {
                "protocol": { "type": "string" },
                "target": { "enum": ["client", "server", "all"] },
                "handle": { "type": "boolean" },
                "handler": { "enum": ["local", "global"] },
                "box": { "type": "boolean" }
            },
            "required": ["protocol", "target"]
        }
    }
}
